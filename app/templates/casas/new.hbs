
<ul class="collection">
    <li class="collection-header">
      <h5>
        <i class="material-icons" title="Usuario">home</i>
        {{#if model.numero}}
        {{model.calle.name}}, {{model.numero}}
        {{else}}
        Nueva propiedad
        {{/if}}

        <span class="secondary-content">
          {{#link-to 'casas'}}<i class="material-icons">home</i>{{/link-to}}
        </span>
      </h5>
    </li>
</ul>

    <form>
<p>
<button type="submit" class='transparent' {{action 'saveModel' casa}} title="Guarda los cambios">
    <i class="material-icons black-text">save</i> 
</button>
</p>
<div class="card card-panel">

<div class="row">
  <div class="input-field">
    <select id="casa.calle" class="browser-default" onchange={{action (mut calleSeleccionada) value='target.value'}}>
{{#each calles as |calle|}}
      <option value="{{calle.id}}">{{calle.name}}</option>
{{/each}}
    </select>
    <label class="active" for="casa.calle">Selecciona una calle</label>
  </div>
</div>

<div class="row">
    <div class="input-field">
        <i class="material-icons prefix">style</i>
        {{input value=casa.numero id="numero" required="true" type="text" class="validate"}}
        {{#if casa.numero}}
        <label class="active" for="numero">Número</label>
        {{else}}
        <label for="numero">Número</label>
        {{/if}}
    </div>
</div>
<div class="row">
  <div class="input-field">
    <select multiple id="propietarios" class="browser-default multiple" onchange={{action 'propietariosSelected' value='target.value'}}>
{{#each propietarios as |propietario|}}
      <option value="{{propietario.id}}">{{propietario.name}} {{propietario.surname1}} {{propietario.surname2}}</option>
{{/each}}
    </select>
    <label class="active" for="propietarios">Selecciona propietarios</label>
  </div>
</div>

</div>
    </form>

